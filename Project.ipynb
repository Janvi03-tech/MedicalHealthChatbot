
# Simple rule-based symptom -> possible diseases + advice
# Not a medical professional. For demonstration only.

import re
import textwrap

# Knowledge base: canonical symptom -> diseases + advice
knowledge_base = {
    "fever": {
        "diseases": ["Flu", "Malaria", "Dengue"],
        "advice": "Rest, drink fluids, paracetamol. Consult a doctor if fever persists for more than 3 days or is very high."
    },
    "cough": {
        "diseases": ["Common cold", "Bronchitis", "COVID-19"],
        "advice": "Try warm drinks and steam inhalation. See a doctor for persistent or severe cough, especially with breathing difficulty."
    },
    "headache": {
        "diseases": ["Migraine", "Tension headache", "Dehydration"],
        "advice": "Hydrate, rest in a quiet/dark room, consider OTC pain relief if appropriate. Seek urgent care if severe with confusion or vomiting."
    },
    "stomach pain": {
        "diseases": ["Gastritis", "Appendicitis", "Food poisoning"],
        "advice": "Avoid spicy food, consider antacids for mild pain. Seek immediate medical attention for sharp localized pain or fever and vomiting."
    }
}

# Aliases/synonyms mapping: alias -> canonical symptom key
aliases = {
    # fever
    "fever": "fever",
    "feverish": "fever",
    "high fever": "fever",
    "temperature": "fever",
    # cough
    "cough": "cough",
    "coughing": "cough",
    "dry cough": "cough",
    # headache
    "headache": "headache",
    "head pain": "headache",
    "migraine": "headache",
    # stomach / abdominal
    "stomach pain": "stomach pain",
    "stomachache": "stomach pain",
    "stomach ache": "stomach pain",
    "abdominal pain": "stomach pain",
}

# Precompute regex patterns for aliases for faster matching
alias_patterns = [(re.compile(r"\b" + re.escape(alias) + r"\b", re.IGNORECASE), canonical)
                  for alias, canonical in aliases.items()]

responses = {
    "greeting": [
        "Hello! I am a Medical Chatbot. Describe your symptoms (e.g., fever, cough, headache, stomach pain).",
        "Hi! Tell me your health issue or symptoms. I'm not a doctor but I can suggest common possibilities."
    ],
    "no_match": [
        "Sorry, I don't understand. Common symptoms I recognize: fever, cough, headache, stomach pain.",
        "Please rephrase, or list specific symptoms. I'm not a substitute for a medical professional."
    ],
    "bye": [
        "Take care! Consult a real doctor for medical advice.",
        "Goodbye! If symptoms persist or worsen, seek medical attention."
    ]
}

GREETING_KEYWORDS = {"hi", "hello", "hey"}
EXIT_KEYWORDS = {"bye", "quit", "exit", "goodbye"}


def extract_symptoms(user_input):
    """
    Return list of canonical symptom keys found in user_input, preserving order and removing duplicates.
    """
    found = []
    text = user_input.lower()
    for pattern, canonical in alias_patterns:
        if canonical not in found and pattern.search(text):
            found.append(canonical)
    return found


def format_symptom_response(symptom):
    kb = knowledge_base.get(symptom)
    if not kb:
        return None
    diseases = ", ".join(kb["diseases"])
    advice = kb["advice"]
    return f"{symptom.title()}: Possible - {diseases}. Advice - {advice}"


def get_response(user_input):
    text = user_input.strip().lower()

    # greetings
    if any(word in text.split() for word in GREETING_KEYWORDS):
        return responses["greeting"][0]

    # check explicit exit words in input
    if any(exit_word in text.split() for exit_word in EXIT_KEYWORDS):
        return responses["bye"][0]

    # extract symptoms
    symptoms = extract_symptoms(user_input)
    if symptoms:
        parts = []
        for s in symptoms:
            resp = format_symptom_response(s)
            if resp:
                parts.append(resp)
        # include a reminder/disclaimer
        parts.append("Note: I am not a doctor. Use this information as general guidance and consult a healthcare professional for a diagnosis.")
        return " | ".join(parts)

    # fallback
    return responses["no_match"][0]


def main():
    print("Medical Chatbot (type 'bye' or 'quit' to exit).")
    print("Disclaimer: This bot is for informational purposes only and not a substitute for professional medical advice.")
    try:
        while True:
            try:
                user_input = input("You: ").strip()
            except EOFError:
                print("\nBot: Goodbye.")
                break

            if not user_input:
                # ignore empty input
                continue

            # if user intended to exit, handle it here
            if any(w in user_input.lower().split() for w in EXIT_KEYWORDS):
                print("Bot:", responses["bye"][0])
                break

            response = get_response(user_input)
            print("Bot:", response)
    except KeyboardInterrupt:
        print("\nBot: Session ended. Take care.")


if __name__ == "__main__":
    main()
